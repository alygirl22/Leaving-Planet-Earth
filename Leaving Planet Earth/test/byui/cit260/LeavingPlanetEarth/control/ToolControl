    /**
     * Test of calcToolAmount method
     */
    @Test
    public void testCalcToolAmount() {
        System.out.println("calcToolAmount");
        
        /********************Test Case #1 ****************/
        System.out.println("\tTest case #1");
        
        // input values for test case 1
        double drill = 1.0;
        double hammer = 1.0;
        double axe = 1.0;
        double rope = 1.0;
        double tarp = 1.0;
        
        double expResult = 5.0; //expected output returned value
        
        //create instance of FoodControl class
        ToolControl instance = new ToolControl();
        
        // call function to run test
        double result = instance.calcToolAmount(drill, hammer, axe, rope, tarp);
        
        //compare expected return value with actual value returned
        assertEquals(expResult, result, 5.0);
   
        
    }

